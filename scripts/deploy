set -eEuo pipefail

ROOT="$(cd "$(dirname "$0")/.." &>/dev/null; pwd -P)"

if [ -z "${PROJECT_ID:-}" ]; then
  echo "âœ‹ Missing PROJECT_ID!" >&2
  exit 1
fi

if [ -z "${TAG:-}" ]; then
  TAG="$(git describe --dirty)"
  echo "ðŸŽˆ Using ${TAG}!" >&2
fi

SUBS="_TAG=${TAG}"
SUBS="${SUBS},_REGION=${REGION:-"us-central1"}"
# For skipping certain deployment, for example ',SKIP_DEPLOY_CLEANUP_EXPOSURE,SKIP_DEPLOY_CLEANUP_EXPORT'
SUBS="${SUBS},_CONDITION=${DEPLOY_CONDITION:-}"

gcloud builds submit --no-source \
  --project "${PROJECT_ID}" \
  --config "${ROOT}/builders/deploy.yaml" \
  --substitutions "${SUBS}"
