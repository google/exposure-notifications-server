set -eEuo pipefail

ROOT="$(cd "$(dirname "$0")/.." &>/dev/null; pwd -P)"

if [ -z "${PROJECT_ID:-}" ]; then
  echo "âœ‹ Missing PROJECT_ID!" >&2
  exit 1
fi

if [ -z "${DB_CONN:-}" ]; then
  echo "âœ‹ Missing DB_CONN (e.g. my-project:us-central1:my-database)!" >&2
  exit 1
fi

if [ -z "${DB_PASS_SECRET:-}" ]; then
  echo "âœ‹ Missing DB_PASS_SECRET (e.g. projects/my-project/secrets/my-secret/versions/1)!" >&2
  exit 1
fi

if [[ "${DB_PASS_SECRET}" != "projects/"*  ]]; then
  echo "âœ‹ DB_PASS_SECRET does not look like a secret reference!"
  exit 1
fi

if [ -z "${DB_NAME:-}" ]; then
  DB_NAME="main"
  echo "ðŸš§ Using database \"${DB_NAME}\"" >&2
fi

if [ -z "${DB_USER:-}" ]; then
  DB_USER="notification"
  echo "ðŸš§ Using username \"${DB_USER}\"" >&2
fi

if [ -z "${COMMAND:-}" ]; then
  COMMAND="up"
  echo "ðŸš§ Using command \"${COMMAND}\"" >&2
fi

gcloud builds submit "${ROOT}" \
  --config "${ROOT}/builders/migrate.yaml" \
  --substitutions "_COMMAND=${COMMAND},_DB_CONN=${DB_CONN},_DB_NAME=${DB_NAME},_DB_PASS_SECRET=${DB_PASS_SECRET},_DB_USER=${DB_USER}" \
  --project "${PROJECT_ID}"
