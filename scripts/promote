set -eEuo pipefail

ROOT="$(cd "$(dirname "$0")/.." &>/dev/null; pwd -P)"

if [ -z "${PROJECT_ID:-}" ]; then
  echo "âœ‹ Missing PROJECT_ID!" >&2
  exit 1
fi

SUBS="_PERCENTAGE=${PERCENTAGE:-"100"}"
SUBS="${SUBS},_REGION=${REGION:-"us-central1"}"
SUBS="${SUBS},_REVISION=${REVISION:-"LATEST"}"
SUBS="${SUBS},_SKIP_DEPLOY_CLEANUP_EXPOSURE=${SKIP_DEPLOY_CLEANUP_EXPOSURE:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_CLEANUP_EXPORT=${SKIP_DEPLOY_CLEANUP_EXPORT:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_DEBUGGER=${SKIP_DEPLOY_DEBUGGER:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_EXPORT=${SKIP_DEPLOY_EXPORT:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_EXPOSURE=${SKIP_DEPLOY_EXPOSURE:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_FEDERATIONIN=${SKIP_DEPLOY_FEDERATIONIN:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_FEDERATIONOUT=${SKIP_DEPLOY_FEDERATIONOUT:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_GENERATE=${SKIP_DEPLOY_GENERATE:-false}"
SUBS="${SUBS},_SKIP_DEPLOY_KEY_ROTATION=${SKIP_DEPLOY_KEY_ROTATION:-false}"

gcloud builds submit --no-source \
  --project "${PROJECT_ID}" \
  --config "${ROOT}/builders/promote.yaml" \
  --substitutions "${SUBS}"
