set -eEuo pipefail

ROOT="$(cd "$(dirname "$0")/.." &>/dev/null; pwd -P)"

if [ -z "${PROJECT_ID:-}" ]; then
  echo "âœ‹ Missing PROJECT_ID!" >&2
  exit 1
fi

if [ -z "${REGION:-}" ]; then
  echo "âœ‹ Missing REGION!" >&2
  exit 1
fi

if [ -z "${REVISION:-}" ]; then
  echo "ðŸš§ Using LATEST revision" >&2
  REVISION="LATEST"
fi

if [ -z "${PERCENTAGE:-}" ]; then
  echo "ðŸš§ Moving 100% of traffic" >&2
  PERCENTAGE="100"
fi

gcloud builds submit "${ROOT}" \
  --config "${ROOT}/builders/promote.yaml" \
  --substitutions "_REGION=${REGION},_REVISION=${REVISION},_PERCENTAGE=${PERCENTAGE}" \
  --project "${PROJECT_ID}"
